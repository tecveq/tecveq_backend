CLIENT_BASE_URL=https://your-frontend-domain.com
PORT=4000
NODE_ENV=production
MONGO_CONNECTION=mongodb+srv://user:pass@cluster.mongodb.net/dbname

# Deployment Configuration
# Comma-separated list of allowed origins (e.g., https://myapp.vercel.app,https://admin.myapp.com)
ALLOWED_ORIGINS=https://your-frontend-domain.com

# JWT / Session Secret
TOKEN_SECRET=LONG_RANDOM_SECRET_STRING

# SSL Configuration (Optional)
# Most cloud providers (Heroku, Railway, Vercel, AWS ALB) handle SSL for you.
# Only fill these if you are running on a raw VPS and managing SSL with Node.js directly.
SSL_KEY_PATH=
SSL_CERT_PATH=
REDIRECT_HTTP=false

# Other API Keys
MY_PERMANENT_TOKEN=
